<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee">

  <application>
    <default-render-kit-id>oracle.adf.rich</default-render-kit-id>
  </application>
  
  <managed-bean>
    <managed-bean-name>templateMB</managed-bean-name>
    <managed-bean-class>mx.unam.ssi.sgc.webapp.controller.TemplateForm</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
  
  <navigation-rule>
    <from-view-id>/welcome.jspx</from-view-id>
    <navigation-case>
      <description>Evento cuando se debe loggear</description>
      <from-outcome>login</from-outcome>
      <to-view-id>/login/login.jspx</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>detailw</from-outcome>
      <to-view-id>/content/detail.jspx</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>all</from-outcome>
      <to-view-id>/content/showall.jspx</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>signin</from-outcome>
      <to-view-id>/signin/signin.jspx</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/login/login.jspx</from-view-id>
    <navigation-case>
      <from-outcome>welcome</from-outcome>
      <to-view-id>/welcome.jspx</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>admin</from-outcome>
      <to-view-id>/admin/admin.jspx</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/content/detail.jspx</from-view-id>
    <navigation-case>
      <from-outcome>returnw</from-outcome>
      <to-view-id>/welcome.jspx</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/content/showall.jspx</from-view-id>
    <navigation-case>
      <from-outcome>returna</from-outcome>
      <to-view-id>/welcome.jspx</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>detaila</from-outcome>
      <to-view-id>/content/detail.jspx</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/signin/signin.jspx</from-view-id>
    <navigation-case>
      <from-outcome>welcomesign</from-outcome>
      <to-view-id>/welcome.jspx</to-view-id>
    </navigation-case>
  </navigation-rule>
  <managed-bean>
    <managed-bean-name>logInMB</managed-bean-name>
    <managed-bean-class>mx.unam.ssi.sgc.webapp.controller.LogInController</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>welcomeMB</managed-bean-name>
    <managed-bean-class>mx.unam.ssi.sgc.webapp.controller.WelcomeController</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>signinMB</managed-bean-name>
    <managed-bean-class>mx.unam.ssi.sgc.webapp.controller.SignInController</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>
</faces-config>